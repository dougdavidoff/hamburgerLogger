<div class="flexbox-container">

    <div class="flexbox-item-1">
        <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="burger image" id="burgerImg">
        <ul id="uneaten">
            <h2> Devour Burger </h2>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=false}}
            {{/unless}}
            {{each}}
        </ul>

    </div>  

    <div class="flexbox-item-2">

        <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="burger image" id="burgerImg">

        <h2> Eat Da Burger </h2>

        <form class="burgerInput">
            <input type="text" id="newBurger" name="burger_name">
                <div class="flexbox-container">

                    <button type="submit" id="burgerBtn">Add Burger</button>

                </div>
        </form>

    </div>
    <div class="flexbox-item-3">
        <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="burger image" id="burgerImg">
        <ul id="eaten">
            <h2>You devoured these burgers: </h2>
            {{#each burger}}
            {{#if devoured}}

            {{> burger/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
        
    </div>
</div>